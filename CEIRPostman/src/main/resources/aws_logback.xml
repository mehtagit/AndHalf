<configuration>
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<encoder>
			<pattern>%date %level [%file:%line] %msg%n</pattern>
		</encoder>
		 <file>/home/ubuntu/CEIRServices/Postman/EmailService/logs/log.log</file>
<!-- 		 <file>/home/ubuntu/CEIRServices/Postman/SmsService/logs/log.log</file> -->
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		  <fileNamePattern>/home/ubuntu/CEIRServices/Postman/EmailService/logs/log.%d{yyyy-MM-dd}.log</fileNamePattern>  
<!-- 		  <fileNamePattern>/home/ubuntu/CEIRServices/Postman/SmsService/logs/log.%d{yyyy-MM-dd}.log</fileNamePattern>  		  
 -->			<maxHistory>60</maxHistory>
		</rollingPolicy>
	</appender>
	<root level="INFO">
		<appender-ref ref="FILE" />
	</root>
</configuration>