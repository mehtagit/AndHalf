<configuration>

	<!-- <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender"> 
		<encoder> <pattern>%date %level [%file:%line] %msg%n</pattern> </encoder> 
		</appender> -->

	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<encoder>
			<pattern>%date %level [%file:%line] %msg%n</pattern>
		</encoder>

		<file>${GUI_CONFIG_LOG_PATH}/logs/log.log</file>
		<!-- <file>/home/ceirapp/ceir/gui/logs/log.log</file> -->




		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">


           <!--  <File>${HOME}/logs/mylog.log</File>
			<fileNamePattern>/home/ubuntu/CeirContent/logs/log.%d{yyyy-MM-dd}.log
			</fileNamePattern> -->
			<fileNamePattern>${GUI_CONFIG_LOG_PATH}/logs/log.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>60</maxHistory>
			<totalSizeCap>10GB</totalSizeCap>
		</rollingPolicy>

	</appender>


	<logger name="org.springframework" level="INFO">
	</logger>

	<logger name="com.zaxxer.hikari" level="INFO">
	</logger>


	<logger name="org.apache.http" level="INFO">
	</logger>

	<!-- <logger name="org.jboss.netty" level="WARN"> </logger> <logger name="org.apache.activemq" 
		level="WARN"> </logger> -->

	<root level="INFO">
		<appender-ref ref="FILE" />
	</root>

</configuration>
