<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Properties>
        <Property name="basePath">/home/ceirapp/ceir/FileCopier/logs</Property>
    </Properties>

    <Appenders>
        <RollingFile name="fileLogger" fileName="${basePath}/process.log" filePattern="${basePath}/process-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>

        <!--<Console name="console" target="SYSTEM_OUT">
            <PatternLayout   pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
        </Console>-->
    </Appenders>
    <Loggers>
        <!--<Logger name="com.gl.ceirreportbuilder.configuration" level="debug" additivity="true">
            <appender-ref ref="fileLogger" level="debug" />
        </Logger>
        <Logger name="org.hibernate.SQL" level="debug" additivity="true">
            <AppenderRef ref="Console-Appender"/>
            <appender-ref ref="fileLogger" level="debug" />
        </Logger>
        <Logger name="org.hibernate.type.descriptor.sql" level="trace" additivity="true">
            <appender-ref ref="fileLogger" level="debug" />
            <AppenderRef ref="Console-Appender"/>
        </Logger>-->
        <!--<Root level="debug" additivity="false">
            <appender-ref ref="console" />
        </Root> -->
        <!-- Log everything in hibernate -->
        <Root level="debug" additivity="true">
            <!-- <appender-ref ref="console" /> -->
            <appender-ref ref="fileLogger" level="debug" />
            <appender-ref ref="fileLogger" level="info" />
            <appender-ref ref="fileLogger" level="error" />
            <appender-ref ref="fileLogger" level="warn" />
        </Root>
    </Loggers>
</Configuration>